<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wildlife.Views.VideoCapturePage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="LetsGoLabel" TargetType="Label">
                <Setter Property="HorizontalTextAlignment"
                        Value="Center" />
                <Setter Property="FontSize" Value="26" />
            </Style>
            <Style x:Key="GetStartedText" TargetType="Label">
                <Setter Property="HorizontalTextAlignment" Value="Center"></Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        

        <StackLayout Padding="10" VerticalOptions="Center">
            <Label
                Text="Lets go!"
                HorizontalTextAlignment="Center"
                Style="{StaticResource LetsGoLabel}"></Label>

            <Label
                Text="To get started, click the button below to take a video of the species!"
                Style="{StaticResource GetStartedText}"
                Margin="0,10,0,10"></Label>
            <Button Grid.Row="1" Text="Take Video" x:Name="videoCaptureButton"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>